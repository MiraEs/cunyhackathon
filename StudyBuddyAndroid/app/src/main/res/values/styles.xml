<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="AppTheme.TransparentToolbar">
        <item name="android:actionBarStyle">@style/Toolbar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/Toolbar.Transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.ActionBar.Solid">

    </style>

    <style name="Toolbar.Transparent">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>

    </style>
    <style name="BorderlessButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/white_button_background</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Button.WhiteHollow">
        <item name="android:background">@drawable/white_rounded_hollow_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Title.White">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
